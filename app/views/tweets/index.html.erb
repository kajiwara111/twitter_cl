<h1>tweet一覧</h1>
<table>
    <tr>
        <th>内容</th>
        <th>リンク</th>
    </tr>

<% @tweets.each do |tweet| %>
    <tr>
        <td><%= tweet.content %></td>
        <td><%= link_to '詳細を確認する', tweet_path(tweet.id) %></td>
        <td><%= link_to 'tweetを編集する', edit_tweet_path(tweet.id) %></td>
        <td><%= link_to 'tweetを削除する', tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除して良いですか？'} %></td>
    </tr>
<% end %>
</table>

<%= link_to 'tweet作成画面に戻る', new_tweet_path %>
